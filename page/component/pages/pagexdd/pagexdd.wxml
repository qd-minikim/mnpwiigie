        </view>

        <view class='align-center font-color-13' style='width:6em'>活动方案</view>
        <view class='align-r-center' style='flex:1;flex-direction:row;display:flex;position:relative'>
          <view style='' class='slopingsideR'></view>
          <view style='width:100%' class='linear'></view>
        </view>
      </view>
      <view style=''>



        <block wx:if="{{requirementInfo.dealtype =='2'}}">
          <view class='font-size-7' style=';flex-direction:row;display:flex' bindtap='clickView_7x' data-lx='default' data-code='CFG_GROUP_MSG' data-html='true'>
            <view>链购方案：</view>
            <view style='flex:1'></view>
            <view class='align-center'>
              <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
            </view>
          </view>
          <view class='align-r-center font-size-7 font-color-11' style=';flex-direction:row;display:flex'>
            <view class='align-center ' style='flex:1'>链团份数(份)</view>
            <view class='align-center  ' style='flex:1'>链团折扣</view>
          </view>


          <block wx:for="{{requirementInfo.cfggroupgradeinfos}}" wx:for-index="index" wx:for-item="item" wx:key="*this">

            <view class='view-7-2-1 align-r-center font-size-7 font-color-11'>
              <view class='view-7-2-1-2 align-center '>{{item.min_copies_grade}}~
                <block wx:if="{{ item.max_copies_grade=='9999999'}}">不限 </block>
                <block wx:else>{{item.max_copies_grade}}</block>

              </view>
              <view class='view-7-2-1-2 align-center '>{{item.discount}}</view>
            </view>
          </block>

        </block>


        <block wx:if="{{initDetail.role =='TW'}}">
          <view class='gap-line'></view>
          <view class='font-size-7' style=';flex-direction:row;display:flex' bindtap='clickView_7x' data-lx='default' data-code='CBDJSM' data-html='true'>
            <view>传播红包：</view>
            <view style='flex:1'>￥{{filters.toFix(requirementInfo.settlementsingleprice*1,2)}}/受众</view>
            <view class='align-center'>
              <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
            </view>
          </view>
          <view class='gap-line'></view>
          <view class='font-size-7' style=';flex-direction:row;display:flex' catchtap='clickView_7x' data-code='ZJSM' data-html='true' data-lx='default'>
            <view catchtap='clickView_7x' data-code='ZJSM' data-html='true' data-lx='default'>红包预算：</view>
            <view style='flex:1' catchtap='clickView_7x' data-code='ZJSM' data-html='true' data-lx='default'>￥{{filters.toFix(requirementInfo.commission*1,2)}}</view>
            <view class='align-center'>
              <view catchtap='opencommission' class='align-center font-color-5' style='flex-direction:row;display:flex'>
                <image class='view-7-figure' src='/image/figure_44.png'></image>
                <view>追加</view>
              </view>
            </view>
          </view>
          <view class='gap-line'></view>
          <view class='font-size-7' style=';flex-direction:row;display:flex' bindtap='clickView_7x' data-lx='default' data-code='SOWER_PER_MSG' data-html='true'>
            <view>分成方案：</view>
            <view style='flex:1'>{{filters.toFix(requirementInfo.sowerpercent*1,2)}}%</view>
            <view class='align-center'>
              <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
            </view>
          </view>
          <block wx:if="{{ requirementInfo.dealtype!='3'}}">
            <view class='gap-line'></view>
            <view class='font-size-7' style=';flex-direction:row;display:flex'>
              <view catchtap='clickView_7x' data-code='TGJZ_MSG' data-html='true' data-lx='default'>活动截至：</view>
              <view style='flex:1' catchtap='clickView_7x' data-code='TGJZ_MSG' data-html='true' data-lx='default'>{{requirementInfo.deadlinetime}}</view>
              <view class='align-center'>
                <picker mode="date" value="{{requirementInfo.deadlinetime}}" start="{{requirementInfo.the_day}}" end="{{requirementInfo.the_end_day}}" bindchange="bindDateChange">
                  <view class='align-center font-color-5' style='flex-direction:row;display:flex'>
                    <image class='view-7-figure' src='/image/figure_36.png'></image>
                    <view>延期</view>
                  </view>
                </picker>
              </view>
            </view>

          </block>
        </block>
        <block wx:if="{{initDetail.role =='XQ'}}">
          <block wx:if="{{requirementInfo.settlementsingleprice>0}}">
            <view class='gap-line'></view>
            <view class='font-size-7' style=';flex-direction:row;display:flex' bindtap='clickView_7x' data-lx='default' data-code='CBDJSM' data-html='true'>
              <view>传播红包：</view>
              <view style='flex:1'>￥{{filters.toFix(requirementInfo.settlementsingleprice*1,2)}}/受众</view>
              <view class='align-center'>
                <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
              </view>
            </view>

          </block>
          <block wx:if="{{requirementInfo.sowerpercent>0}}">
            <view class='gap-line'></view>
            <view class='font-size-7' style=';flex-direction:row;display:flex' bindtap='clickView_7x' data-lx='default' data-code='SOWER_PER_MSG' data-html='true'>
              <view>分成方案：</view>
              <view style='flex:1'>{{filters.toFix(requirementInfo.sowerpercent*1,2)}}%</view>
              <view class='align-center'>
                <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
              </view>
            </view>

