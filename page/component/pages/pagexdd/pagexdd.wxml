                  <text>{{requirementInfo.isreturnname}}{{requirementInfo.returndays}}天退货</text>
                </block>
                <block wx:else>
                  {{requirementInfo.isreturnname}}退货
                </block>
              </view>
              <view class='align-r-center' style='margin-right:10rpx;text-align:left'>
                <block wx:if="{{ requirementInfo.ischange=='0'}}">
