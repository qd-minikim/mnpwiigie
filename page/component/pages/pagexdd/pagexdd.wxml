                <view style='margin:2rpx 10rpx'>{{item.actiontypetime}}</view>
              </view>
            </swiper-item>
          </block>
        </swiper>
      </view>
    </view>
    <!-- 标题 -->
    <view style='margin:5rpx 15rpx'>
      <view style='flex-direction:row;display:flex   '>

        <view class=' font-size-5'>
          <text class=' bg-6 font-color-2 font-size-7' style='border-radius:50rpx;padding:4rpx 15rpx'>{{requirementInfo.merchantbrandname}}</text>
          <text class='font-size-5'>{{requirementInfo.title}}</text>
        </view>
      </view>
      <block wx:if="{{requirementInfo.dealtype !='3'}}">
        <view class=' font-size-6' style='flex-direction:row;display:flex   '>

          <text class='font-size-6 font-color-11'>{{requirementInfo.wxdescription}}</text>

        </view>
      </block>

      <view class='gap-line'></view>
      <view class='font-size-5' style=';flex-direction:row;display:flex' bindtap='clickView_7x' data-lx='sku' data-code='' data-html='false'>
        <view style='flex-direction:row;display:flex'>已
          <view style="color:#ffffff ">白白</view>选：</view>
        <view style='flex:1'>{{myOrderInfo.mySkuInfo.sku_desc}} {{myOrderInfo.orderCopies}}份</view>
        <view class='align-center'>
          <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
        </view>
      </view>

      <view class='gap-line'></view>
      <view class='font-size-5' style=';flex-direction:row;display:flex'>
        <view style='flex-direction:row;display:flex' catchtap='clickView_7x' data-code='DETAIL_MSG_7' data-html='false' data-lx='default'>门市价格：</view>
        <view style='flex:1;flex-direction:row;display:flex'>

          <view style="{{requirementInfo.dealtype =='2'?'text-decoration:line-through':''}};margin-right:15rpx" catchtap='clickView_7x' data-code='DETAIL_MSG_7' data-html='false' data-lx='default'>￥{{filters.toFix(myOrderInfo.mySkuInfo.list_price,2)}}</view>
          <block wx:if="{{initDetail.role =='XQ'}}">
            <block wx:if="{{requirementInfo.dealtype =='2'}}">
              <view catchtap='openlinkprice' class='align-center bg-6 font-color-2 font-size-8' style='border-radius:50rpx;padding:4rpx 15rpx   '>查看我的链团价</view>

            </block>
          </block>
          <block wx:if="{{initDetail.role =='TW'}}">
            <block wx:if="{{requirementInfo.dealtype =='2'}}">
              <view catchtap='opendynamiclinkprice' class='align-center bg-6 font-color-2 font-size-8' style='border-radius:50rpx;padding:4rpx 15rpx   '>动态链团价</view>

            </block>
          </block>


          <view style='flex:1;flex-direction:row;display:flex' catchtap='clickView_7x' data-code='DETAIL_MSG_7' data-html='false' data-lx='default'></view>
        </view>
        <view class='align-center' catchtap='clickView_7x' data-code='DETAIL_MSG_7' data-html='false' data-lx='default'>
          <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
        </view>
      </view>

      <block wx:if="{{initDetail.role =='XQ'}}"></block>


    </view>

    <view class="gap-bg" style="flex-direction:column;"></view>


