                <block wx:else>
                  {{requirementInfo.ischangename}}换货
                </block>
              </view>
            </view>
            <view class='align-center'>
              <image style='width:40rpx;height:40rpx' src='/image/arrow_right_1.png'></image>
            </view>
          </view>

        </block>


      </view>
    </view>
