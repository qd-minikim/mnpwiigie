  <scroll-view class="{{panelPage.panelPageTop?'choose_top':'choose' }}  font-size-4" wx:if="{{panelPage.chooseSize }}" animation='{{panelPage.animationData}}' scroll-y='false' scroll-into-view="target" scroll-with-animation="false">
