  <view class='flex-bottom-2 align-center'>
    <!-- bindtap='forwardfriend' bindtap='forwardfriend'-->
    <button class='font-size-5 align-center' type="primary" bindtap='forwardfriend' style='width:60%;height:100%;'>发送给好友</button>
  </view>
</block>

