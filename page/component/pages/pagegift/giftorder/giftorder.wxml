<!--page/component/pages/pagegift/giftorder/giftorder.wxml-->
<wxs module="filters" src="../../../../../utils/rFiltersUtils.wxs"></wxs>
<view class='container ' style="flex-direction:column;display:flex; ">
  <view class='align-left giftorder-view-1 align-center' bindtap='selectUserAddr'>

    <view class='giftorder-view-1-1 font-size-4'  >
      <view>送礼留言：</view>
      <view class='font-size-5 font-color-4' style='flex:1;text-align:right'>{{currentNoteLen|0}}/{{textareaMaxLen}}</view>
    </view>
    <view>
      <textarea class='font-size-4 giftorder-view-1-textarea ' placeholder='{{configMsgInfo.GIFT_FORWARD_MSG}}' maxlength='{{textareaMaxLen}}'     auto-focus='true'  bindinput='bindWordLimit'></textarea>
    </view>

  </view>
  <view class="gap-line" style="flex-direction:column;"></view>
  <view class='giftorder-view-2'>
    <view class='giftorder-view-row font-size-4 align-r-center'>
      <view class='giftorder-view-title'>已选规格：</view>
      <view style='flex:1'>{{orderData.sku_desc}} {{orderData.buycopies}}</view>
    </view>
    <view class='giftorder-view-row font-size-4'>
      <view class='giftorder-view-title'>预付单价：</view>
      <view>￥{{filters.toFix(orderData.unitPrice*1,2)}}</view>
    </view>
    <view class='giftorder-view-row font-size-4'>
      <view class='giftorder-view-title'>支付金额：</view>
      <view class=' font-color-7'>￥{{filters.toFix(orderData.buyCash*1,2)}}</view>
    </view>
  </view>


  <view class='flex-bottom align-center'>
    
      <button class='font-size-2' type="warn" bindtap='orderpay' style='width:100%;height:100%;'>提交订单</button>
  
  </view>
</view>