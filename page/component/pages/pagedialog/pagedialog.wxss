.view-2 {
}

.view-2-1 {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
}

.view-2-1-input {
  width: 80%;
  height: 40px;
  background-color: white;
  line-height: 40px;
  font-size: 14px;
  border: 1px solid #d0d0d0;
  padding-left: 10px;
}

.view-2-1-button {
  border: 1px solid white;
  width: 18%;
  height: 41px;
  background: #fff;
  color: #000;
  line-height: 40px;
  font-size: 14px;
  padding-left: 5rpx;
  padding-right: 5rpx;
}

.view-2-1-image-ja {
  height: 80rpx;
  width: 90rpx;
  border: 1rpx solid #2223;
