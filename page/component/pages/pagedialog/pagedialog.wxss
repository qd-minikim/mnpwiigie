}

.view-1-1 {
  width: 60%;
  text-align: center;
  margin: 0 auto;
  font-size: 30rpx;
  color: #787878;
}

.view-1-1-line {
  width: 60rpx;
  height: 5rpx;
  background-color: #dbd8d8;
}

.view-1-2-scoll {
  height: 100%;
  margin-top: 15px;
  margin: 10px;
  font-size: 14px;
  line-height: 40px;
  word-break: break-all;
}
.view-1-2-right{
    float: right;
  position: relative;
  right: 40rpx;
}
.view-1-2-sanjiao{
    top: 20rpx;
  position: relative;
  width: 0px;
  height: 0px;
  border-width: 10px;
  border-style: solid;
}
.view-1-2-my{
  border-color: transparent transparent transparent #95d4ff;
}
.view-1-2-you {
  border-color: transparent #95d4ff transparent transparent;
}

.view-1-2-image{
    width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}

.view-1-2-left{
  float: left;
  position: relative;
  left: 5rpx;
}
.view-1-2-text
{
  width: 380rpx;
  border-radius: 7px;
  background-color: #95d4ff;
  padding: 20rpx 20rpx 20rpx 20rpx;
  line-height:60rpx;
  

}
.view-2 {
}

.view-2-1 {
  background-color: white;
  width: 100%;
  position: fixed;
  bottom: 0rpx;
  display: flex;
  flex-direction: row;
}

.view-2-1-input {
  width: 80%;
  height: 40px;
  background-color: white;
  line-height: 40px;
  font-size: 14px;
  border: 1px solid #d0d0d0;
  padding-left: 10px;
}

.view-2-1-button {
  border: 1px solid white;
  width: 18%;
  height: 41px;
  background: #fff;
  color: #000;
  line-height: 40px;
  font-size: 14px;
  padding-left: 5rpx;
  padding-right: 5rpx;
}

.view-2-1-image-ja {
  height: 80rpx;
  width: 90rpx;
  border: 1rpx solid #2223;
  border-radius: 50%;
}
