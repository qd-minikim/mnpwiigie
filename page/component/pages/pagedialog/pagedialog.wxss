  float: right;
  position: relative;
  right: 10rpx;
  margin-top:10rpx;

}

.view-1-2-sanjiao {
  top: 20rpx;
  position: relative;
  width: 0px;
  height: 0px;
  border-width: 10px;
  border-style: solid;
}

.view-1-2-my {
  border-color: transparent transparent transparent #35f56f;
}

.view-1-2-you {
  border-color: transparent #95d4ff transparent transparent;
}

.view-1-2-image {
  width: 80rpx;
  height: 80rpx;
