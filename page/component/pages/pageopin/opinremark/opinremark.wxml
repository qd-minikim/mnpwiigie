<!--page/component/pages/pageopin/opinremark/opinremark.wxml-->

<import src="../../../../common/pages/pageopinsrmark/pageopinsrmark.wxml" />
<import src="../../../../common/pages/pageattach/pageattach.wxml" />

<view class='container ' style='flex-direction:colum;display:flex; ' bindtap='cancleattach'>
  <scroll-view class="" scroll-top="{{scrollTop}}"  scroll-y='true' scroll-into-view="target" scroll-with-animation="false" style='width:{{scrollviewwidth}}px;height:{{scrollviewheight}}px'>
 

    <view style='width:100% '>
      <view style=' display: flex;flex-direction: column;width:100%;'>
        <view class=' align-r-center' style='margin:2rpx 10rpx;display: flex;flex-direction: row;'>
          <view class=''>
            <image class='pageopins-image' src='{{option.image_url}}'></image>
          </view>
          <view class='' style='flex:1'>
            <view class='font-size-6'>{{option.user_nickname}}</view>
            <view class='font-size-7 font-color-4'>{{option.datetime}}</view>
          </view>
          <view class=' font-size-6'>{{option.opinion_code_name}}</view>
        </view>
        <view class='font-size-6 ' style='margin:2rpx 10rpx;'>{{option.opinion_reason}}</view>
        <!-- 图片 1541518024215794-->

        <view class='pageopins-view'>
          <block wx:for="{{option.opinion_imgs}}" wx:for-index="indexo" wx:for-item="itemImg" wx:key="*this">
            <view class='align-center' style='width:{{opinpicsize}}px;height:{{opinpicsize}}px'>
              <image class='' style='width:{{opinpicsize-3}}px;height:{{opinpicsize-3}}px' src='{{itemImg.imageurl}}' bindtap='imageYl' data-src='{{itemImg.imageurl}}' data-list='{{option.opinion_imgs}}' data-index="{{indexo}}"></image>

            </view>


          </block>

        </view>

      </view>

    </view>

    <view class="gap-bg" style="flex-direction:column;"></view>
    <view style='width:100%;'>
      <view style='display:flex;flex-direction:row;margin:10rpx 15rpx '>
        <view class='gap-line-v' style=' background-color:#e36c09'></view>
        <view class="font-size-7" style='margin-left:5rpx'>{{allRows}}</view>
        <view class="font-size-7 font-color-4" style='margin-left:5rpx'>条留言</view>
      </view>

    </view>
    <view class="gap-line" style="flex-direction:column;"></view>
    <view style='width:100% '>

      <template is="opinremark" data="{{remarks,remarkopinpicsize}}" />

    </view>

  </scroll-view>
  <!--隐藏区域  -->
  <view class='maskLayer' style='width:{{panelPage.maskLayerWidth}};height:{{panelPage.maskLayerHeight}}' wx:if="{{panelPage.chooseSize}}" bindtap='hideSlideModal'></view>
  <scroll-view class="{{panelPage.panelPageTop?'choose_top':'choose' }} font-size-4" wx:if="{{panelPage.chooseSize }}" animation='{{panelPage.animationData}}' scroll-y='false' scroll-into-view="target" scroll-with-animation="false">

    <block wx:if="{{ panelPage.chooseType=='attachment'}}">
      <view class='choose_view'>
        <template is="pageattach" data="{{panelPage}}" />
      </view>
    </block>
  </scroll-view>
  <view class='view-2 flex-bottom'>
    <view class='pageopins-view-2-1 align-r-center '>
      <view style='flex:1 ;padding:5rpx'>
        <input bindinput="bindKeyInput" maxlength='200' class='font-size-6 pageopins-view-2-1-input' placeholder='留言' value='{{inputRemarkValue}}'></input>
      </view>
      <view style=';padding:5rpx' class='align-center'>
        <view wx:if='{{sendBtnShow}}' class='pageopins-view-2-1-send align-center' catchtap="sendRemark">发送</view>
        <image wx:if='{{!sendBtnShow}}' catchtap="upimg1" class='pageopins-view-2-1-image-ja' src='/image/figure_121.png' catchtap='attachment' data-lx='attachment' data-code='' data-html='false'></image>
      </view>


    </view>

  </view>
</view>