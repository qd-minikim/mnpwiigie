<!--page/component/pages/pagemy/hydtmore/hydtmore.wxml-->

<import src="../../page/common/pages/pagehydt/pagehydt.wxml" />
<view class='container ' style='flex-direction:colum;display:flex; '>
  <view class="hydtm-view-1">
    <view class="hydtm-view-1-1 {{currentTab==0 ? 'tab-on' : ''}}" data-current="0" bindtap="swichNav">光顾</view>
    <view class="hydtm-view-1-1 {{currentTab==1 ? 'tab-on' : ''}}" data-current="1" bindtap="swichNav">推荐</view>
    <view class="hydtm-view-1-1 {{currentTab==2 ? 'tab-on' : ''}}" data-current="2" bindtap="swichNav">下单</view>
    <view class="hydtm-view-1-1 {{currentTab==3 ? 'tab-on' : ''}}" data-current="3" bindtap="swichNav">表态</view>
  </view>

  <swiper current="{{currentTab}}" class="swiper-box" duration="300" style="height:{{scrollViewHeight}}px" bindchange="bindChange">
    <!--阅读-->
    <swiper-item>
      <scroll-view style='height:{{scrollViewHeight}}px;' scroll-y='true' scroll-into-view="target" scroll-with-animation="false" bindscroll="scroll" bindscrolltoupper="upper" bindscrolltolower="lower" lower-threshold='3200'>
  
       <template is="pagehydt0" data="{{home5Array0,home5Selected0}}" />
       
      </scroll-view>
    </swiper-item>
    <!--转发-->
    <swiper-item>
      <scroll-view style='height:{{scrollViewHeight}}px;' scroll-y='true' scroll-into-view="target" scroll-with-animation="false" bindscroll="scroll" bindscrolltoupper="upper" bindscrolltolower="lower" lower-threshold='3200'>

         
          <template is="pagehydt1" data="{{home5Array1,home5Selected1}}" />
       
      </scroll-view>
    </swiper-item>
    <!--下单-->
    <swiper-item>
      <scroll-view style='height:{{scrollViewHeight}}px;' scroll-y='true' scroll-into-view="target" scroll-with-animation="false" bindscroll="scroll" bindscrolltoupper="upper" bindscrolltolower="lower" lower-threshold='3200'>

         
          <template is="pagehydt2" data="{{home5Array2,home5Selected2}}" />
      
      </scroll-view>
    </swiper-item>
    <!--朋友说-->
    <swiper-item>
      <scroll-view style='height:{{scrollViewHeight}}px;' scroll-y='true' scroll-into-view="target" scroll-with-animation="false" bindscroll="scroll" bindscrolltoupper="upper" bindscrolltolower="lower" lower-threshold='3200'>

        
          <template is="pagehydt3" data="{{home5Array3,home5Selected3}}" />
        
      </scroll-view>
    </swiper-item>
  </swiper>




</view>