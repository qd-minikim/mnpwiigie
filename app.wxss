/**app.wxss**/

.container {
  height: 100%;
  width: 100%;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
  font-family: Microsoft YaHei;
}

/* 区块的间隔背景色  */

.gap-bg {
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}

/* 横线间隔  */

.gap-line {
  width: 100%;
  height: 5rpx;
  background-color: #f7f7f7;
}

/* 字号大小 */

.font-size-0 {
  font-size: 52rpx;
}

.font-size-1 {
  font-size: 46rpx;
}

.font-size-2 {
  font-size: 42rpx;
}

.font-size-3 {
  font-size: 38rpx;
}

.font-size-4 {
  font-size: 34rpx;
}

.font-size-5 {
  font-size: 30rpx;
}

.font-size-6 {
  font-size: 26rpx;
}

.font-size-7 {
  font-size: 22rpx;
}

/* 字体颜色 */

.font-color-1 {
  color: #333;
}

.font-color-2 {
  color: #fff;
}

.font-color-3 {
  color: #999;
}

.font-color-4 {
  color: #a0a0a0;
}

.font-color-5 {
  color: #00c003;
}

.font-color-6 {
  color: #313131;
}

.font-color-7 {
  color: #ff5858;
}

.font-color-8 {
  color: #5780ff;
}

.font-color-9 {
  color: #4395f5;
}

.font-color-10 {
  color: #f4f4f4;
}

.font-color-11 {
  color: #e36c09;
}

/* 超出范围省略号显示 */

.view-ellipsis-1 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}

.view-ellipsis-2 {
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}

/* 水平垂直居中 */

.align-center {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 水平居中 */

.align-c-center {
  display: flex;
  justify-content: center;
}

/* 垂直居中  */

.align-r-center {
  display: flex;
  align-items: center;
}

/* 固定底部菜单 */

.flex-bottom {
  /* //height:8%; */
  height: 120rpx;
  /* background:#F4F4F4;  *//* padding: 16rpx; */
  display: flex;
  position: fixed;
  bottom: 0;
  width: 100%;
  box-sizing: border-box;
}

/* 详情页的右箭头 */

.arrow_right_1 {
  width: 80rpx;
  height: 80rpx;
}

/*链购红色背景图*/

.bg-figure4-image {
  background-image: url("data:image/png;base64,");
}

/* 上推显示页面的样式 */

.maskLayer {
  position: absolute;
  background-color: #9d9d9d;
  filter: alpha(opacity=50);
  opacity: 0.7;
}

.choose {
  position: absolute;
  background-color: #f7f4f4;
  bottom: 0px;
  width: 100%;
  min-height: 100px;
  max-height: 400px;
  z-index: 999;
  padding: 10rpx;
}

.choose_view {
  with: 100%;
  height: 100%;
  margin: 10rpx;
}



/*辅助wxParse的样式问题 */
.wxParse-p {
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 0px;
  margin-bottom: 0px;
}
