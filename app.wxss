/**app.wxss**/

.container {
  height: 100%;
  width: 100%;
  /* display: flex; */
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  /* padding: 200rpx 0; */
  box-sizing: border-box;
}

/* 区块的间隔背景色  */

.gap-bg {
  width: 100%;
  height: 20rpx;
  background-color: #f7f7f7;
}
/* 横线间隔  */
.gap-line{

  width: 100%;
  height: 5rpx;
  background-color: #f7f7f7;
}



/* 字号大小 */
.font-size-1 {
  font-size: 46rpx;
}

.font-size-2 {
  font-size: 42rpx;
}

.font-size-3 {
  font-size: 38rpx;
}

.font-size-4 {
  font-size: 34rpx;
}

.font-size-5 {
  font-size: 30rpx;
}
.font-size-6 {
  font-size: 26rpx;
  
}
.font-size-7 {
  font-size: 22rpx;
  
}
.view-ellipsis-1{
   text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 1;
  -webkit-box-orient: vertical;
  align-content: center;
}
.view-ellipsis-2{
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  align-content: center;
}